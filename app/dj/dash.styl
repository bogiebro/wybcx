.indent
	padding-left: 30px;

.down
	margin-top: 20px;

.desc
	margin-top: 20px;
	max-width: 640px;
	margin-left:auto;
	margin-right:auto;
	text-align: justify;

.drop-box {
	display: block;
	background: #F8F8F8;
	padding: 3px; 
	width: 120px;
}

.bordered
	border: 5px dashed #DDD;
	padding: 3px;

.bordered.dragover
	border: 5px dashed blue;

@media (min-width: 768px) {
    .dash {
        position: fixed;
        top: 20%;
        @media (min-width: 1200px) {
            left: 30%;
        }
    }
}

@media (max-width: 768px) {
	div.smallright {
		position: fixed;
		right: 30px;
		top: 60px;
	}
}
