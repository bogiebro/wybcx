doctype 5
html(ng-app="listenApp")
  head
    title WYBC Yale Radio

    link(rel='stylesheet', href="http://netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/css/bootstrap-combined.no-icons.min.css")
    link(rel='stylesheet', href="/css/utilities.css")
    link(rel='stylesheet', href="/css/listener.css")
    link(rel="shortcut icon", type="image/x-icon", href="/img/goat.png")

    script(src="/socket.io/socket.io.js")
    script(src="/js/vendor.js")
    script(src="/js/listener.js")
    script(src="/js/utilities.js")
    script(src="/js/app.listener.templates.js")

  body(ng-controller="MainCtrl")
    img(src="/img/goat.png", class="atleft bighideme")
    h1(class="wybclogo midhideme") WYBC
    tabset(class="atright smallhideme")
        tab(heading="listen", select="doit('/listen')")
        tab(heading="shows", select="doit('/shows')")
        tab(heading="blog", select="doit('/blog')")
        tab(heading="zine", select="doit('/zine')")
    div.container
        div(ng-view)
