div.mid
    h1 Log In
    form.form-horizontal(ng-submit='login()')
        div.control-group
            label.control-label(for='inputName') Email
            div.controls
                input(type='text', ng-model="email", id='inputEmail', class='input-large')
        div.control-group
            label.control-label(for='inputPassword') Password
            div.controls
                input(type='password', ng-model="password", id='inputPassword')
        div.control-group
            div.controls
                button.btn(type='submit') Sign in