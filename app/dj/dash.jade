div.container
    .dash
        .row
            .col-xs-5(class="hidden-xs")
                img.down(ng-show='showinfo.hasimage', class='bordered', id="showpic", ng-file-drop="onImgSelect($files);", ng-src="#{AROOT}/image/{{ showimg }}")
                div.down(ng-show="!showinfo.hasimage", class='bordered filler', ng-file-drop="onImgSelect($files);")<i>Drop a picture</i>
            .col-xs-7
                h1 {{showinfo.name}}
                h3.indent(ng-class='maybegray') {{timetext}}
                .row(class="down")
                    .col-xs-4(class="hidden-xs")
                        div(ng-show="dropSupported", class="bordered drop-box", ng-file-drop="onPromoSelect($files);", ng-file-drop-available="dropSupported=true")
                            i {{promotext()}} 
                    .col-xs-5(class="hidden-xs")
                        div(ng-show="dropSupported", class="bordered drop-box", ng-file-drop="onRecSelect($files);", ng-file-drop-available="dropSupported=true")
                            i {{rectext()}}
                    .col-xs-3(class="smallright")
                        button(class="btn btn-lg btn-default", ng-click="onAir()") On Air
        p.desc(ng-show="!editing") {{showinfo.description}}
            | <a ng-click="editing = true"><i>Edit</i></a>

        form.desc(role="form", ng-show="editing")
            div.form-group
                textarea.form-control(rows="3", ng-model="showinfo.description")
            button(type="submit", class="btn btn-default", ng-click="edit()") Save
